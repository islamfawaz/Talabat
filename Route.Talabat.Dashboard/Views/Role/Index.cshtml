@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}
<partial name="RoleFormPartialView" model="new RoleFormViewModel()" />
@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h1>There are no Roles.</h1>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
