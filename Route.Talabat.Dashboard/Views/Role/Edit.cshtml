@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Form</h1>
<hr />
<form method="post" asp-action="Edit" class="mt-4">
    <input asp-for="Id" class="form-control" hidden />

    <div class="form-group mt-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="input-group mt-2 justify-content-center">
        <button type="submit" class="btn btn-success me-2">Edit</button> 
        <a asp-action="Index" class="btn btn-secondary">Back to Index</a>
    </div>
</form>
