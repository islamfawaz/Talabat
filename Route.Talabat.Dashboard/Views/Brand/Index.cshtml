@using Route.Talabat.Core.Domain.Entities.Products
@model IEnumerable<ProductBrand>

@{
    ViewData["Title"] = "Index";
}

<h1>All Brands</h1>

<form id="brandForm">
    <div class="input-group mb-2">
        <input id="brandName" class="form-control" placeholder="Enter Brand Name" required />
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Add New Brand</button>
        </div>
    </div>
</form>

@if (Model.Any())
{
    <table class="table table-striped table-hover" id="brandsTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="brand-@item.Id">
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <button class="btn btn-outline-danger" onclick="deleteBrand(@item.Id)">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There are No Brands!</h2>
    </div>
}

@section Scripts
{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#brandForm').on('submit', function (e) {
                e.preventDefault(); 
                var brandName = $('#brandName').val();

                $.ajax({
                    url: '@Url.Action("Create", "Brand")',
                    type: 'POST',
                    data: { Name: brandName },
                    success: function (response) {
                        if (response.success) {
                            location.reload();  
                        } else {
                            alert(response.message); 
                        }
                    },
                    error: function (xhr, status, error) {
                        alert('Error: ' + error);
                    }
                });
            });
        });

        function deleteBrand(id) {
            if (confirm('Are you sure you want to delete this brand?')) {
                $.ajax({
                    url: '@Url.Action("Delete", "Brand")',
                    type: 'POST',
                    data: { id: id },
                    success: function (response) {
                        if (response.success) {
                            $('#brand-' + id).remove();  
                        } else {
                            alert(response.message); 
                        }
                    },
                    error: function (xhr, status, error) {
                        alert('Error: ' + error);
                    }
                });
            }
        }
    </script>
}
