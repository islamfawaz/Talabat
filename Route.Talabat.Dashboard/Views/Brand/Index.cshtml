@using Route.Talabat.Core.Domain.Entities.Products
@model IEnumerable<ProductBrand>

@{
    ViewData["Title"] = "Index";
}

<h1>All Brands</h1>

<form method="post" asp-action="Create">
    <div class="input-group mb-2">
        <input name="Name" class="form-control" placeholder="Enter Brand Name" required />
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Add New Brand</button>
        </div>
    </div>
</form>

@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this brand?');">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There are No Brands!</h2>
    </div>
}

